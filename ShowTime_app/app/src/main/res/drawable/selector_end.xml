<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <shape>
            <corners android:topLeftRadius="0dp" android:topRightRadius="6dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="6dp"/>
            <solid android:color="@color/selected_item" />
            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:topLeftRadius="0dp" android:topRightRadius="6dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="6dp"/>
                    <solid android:color="@color/colorPrimary" />
                    <size
                        android:width="30dp"
                        android:height="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
